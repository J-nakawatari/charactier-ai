# バックエンド環境変数 - サンプル設定

# ========================================
# サーバー設定
# ========================================

# サーバーポート
#PORT=3004

# Node環境
NODE_ENV=development

# ========================================
# データベース設定
# ========================================

# MongoDB接続URL
# 開発環境: mongodb://localhost:27017/charactier
# 本番環境: mongodb://username:password@cluster.mongodb.net/charactier
MONGO_URI=mongodb://localhost:27017/charactier

# ========================================
# 認証・セキュリティ設定
# ========================================

# JWT シークレットキー (本番環境では強力なランダム文字列を使用)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# リフレッシュトークンのシークレットキー
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# ========================================
# 外部API設定
# ========================================

# OpenAI API キー
OPENAI_API_KEY=sk-xxx...

# Stripe設定
STRIPE_SECRET_KEY=sk_test_xxx...
STRIPE_WEBHOOK_SECRET=whsec_xxx...

# ========================================
# Redis設定 (SSE・キャッシュ用)
# ========================================

# Redis接続URL
# 開発環境: redis://localhost:6379
# 本番環境: redis://redis-server:6379 または Redis Cloudなど
REDIS_URL=redis://localhost:6379

# ========================================
# CORS・セキュリティ設定
# ========================================

# フロントエンドURL (CORS用)
# 開発環境: http://localhost:3000
# 本番環境: https://charactier.com
FRONTEND_URL=http://localhost:3000

# 許可するオリジン (カンマ区切り)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# ファイルアップロード設定
# ========================================

# アップロードディレクトリ
UPLOAD_DIR=uploads

# 最大ファイルサイズ (MB)
MAX_FILE_SIZE=10

# ========================================
# 本番環境での設定例
# ========================================

# 本番環境では以下のような設定になります:
# PORT=3004
# NODE_ENV=production
# MONGO_URI=mongodb://username:password@cluster.mongodb.net/charactier
# JWT_SECRET=extremely-long-random-string-for-production
# OPENAI_API_KEY=sk_live_xxx...
# STRIPE_SECRET_KEY=sk_live_xxx...
# REDIS_URL=redis://redis:6379
# FRONTEND_URL=https://charactier.com
# ALLOWED_ORIGINS=https://charactier.com