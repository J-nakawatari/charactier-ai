FROM node:18-alpine

# 作業ディレクトリ設定
WORKDIR /app

# 開発に必要なツールをインストール
RUN apk add --no-cache python3 make g++

# package.jsonとpackage-lock.jsonをコピー
COPY package*.json ./

# 依存関係をインストール
RUN npm ci

# nodemonをグローバルインストール（ホットリロード用）
RUN npm install -g nodemon

# TypeScriptをグローバルインストール
RUN npm install -g typescript

# ポート公開
EXPOSE 5000

# 開発サーバー起動
CMD ["npm", "run", "dev"]